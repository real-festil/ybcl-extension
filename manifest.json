{
  "manifest_version": 3,
  "name": "YouTube Better Comment Layout",
  "version": "1.0",
  "description": "Change the layout of YouTube comments/recommendations section",
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["script.js"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}